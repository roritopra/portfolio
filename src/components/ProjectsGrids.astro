---
import Astra from '/astra.webp'
import Tyco from '/tyco.webp'
import HM from '/h&m.webp'
import Rodro from '/rodro.webp'
import Bank from '/bancow.webp'
import Bitx from '/bitx.webp'
import AstraBg from '/astraBg.png'
import BitxBg from '/bitxBg.png'

---

<style>
	.hover-image {
		opacity: 1;
	}
</style>

<section
	style="grid-template-columns: repeat(14, minmax(0, 1fr));"
	class="relative h-full px-12 grid grid-cols-12 z-50"
>
	<article
		style="grid-column: 4 / 12;"
		class="flex flex-col justify-center items-center"
	>
		<div class="flex justify-center flex-col items-center mb-28">
			<h6
				style="background: var(--titlessubtitles, linear-gradient(89deg, #01EBA6 0%, #01D398 34.90%, #01A47D 69.79%, #018C77 97.97%));
	background-clip: text;
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;"
				class="relative z-40 text-center mb-2 text-xl font-bold tracking-tight"
			>
				Work
			</h6>
			<h2 class="relative z-30 text-center text-white font-bold text-5xl mb-3">
				Dig into my universe
			</h2>
		</div>
		<div
			class="w-full aspect-4/3 grid grid-cols-3 grid-rows-3 gap-2 relative z-10"
		>
			<div
				class="w-full cursor-pointer h-full flex items-center justify-center relative p-1 rounded-md bg-gradient-to-t from-[#03B381] to-[#3B4755]"
				id="item-0"
			>
				<div
					class="card-image flex justify-center relative items-center h-full rounded-md w-full bg-gray-800"
				>
					<img
						style="max-width: 30%;
						aspect-ratio: 1 / 1;"
						id="image1"
						class="object-contain py-5 transition-opacity duration-500"
						src={Astra}
						alt=""
					/>
					<img
						style="max-width: 100%;
						aspect-ratio: 1 / 1;"
						id="image2"
						class="hover-image w-full h-full object-cover opacity-0 absolute top-0 left-0 transition-opacity duration-500"
						src={AstraBg}
						alt=""
					/>
				</div>
			</div>
			<div
				class="w-full h-full flex items-center justify-center relative p-1 rounded-md bg-gradient-to-t from-[#03B381] to-[#3B4755]"
				id="item-1"
			>
				<div
					class="flex justify-center items-center h-full rounded-md w-full bg-[#25073C]"
				>
					<img
						style="max-width: 80%;
						aspect-ratio: 1 / 1;"
						class="object-contain"
						src={Tyco}
						alt=""
					/>
				</div>
			</div>
			<div
				class="w-full h-full flex items-center justify-center relative p-1 rounded-md bg-gradient-to-t from-[#03B381] to-[#3B4755]"
				id="item-2"
			>
				<div
					style="background: linear-gradient(180deg, #FFF 0%, #D7D0CF 100%);
				"
					class="flex justify-center items-center h-full rounded-md w-full"
				>
					<img
						style="max-width: 80%;
						aspect-ratio: 1 / 1;"
						class="object-contain"
						src={HM}
						alt=""
					/>
				</div>
			</div>
			<div
				class="w-full h-full flex items-center justify-center relative p-1 rounded-md bg-gradient-to-t from-[#03B381] to-[#3B4755]"
				id="item-3"
			>
				<div
					class="flex justify-center items-center h-full rounded-md w-full bg-[#122C35]"
				>
					<img
						style="max-width: 80%;
						aspect-ratio: 1 / 1;"
						class="object-contain"
						src={Rodro}
						alt=""
					/>
				</div>
			</div>
			<div
				class="w-full h-full flex items-center justify-center relative p-1 rounded-md bg-gradient-to-t from-[#03B381] to-[#3B4755]"
				id="item-4"
			>
				<div
					class="flex justify-center items-center h-full rounded-md w-full bg-white"
				>
					<img
						style="max-width: 55%;
						aspect-ratio: 0 / 0;"
						class="object-contain"
						src={Bank}
						alt=""
					/>
				</div>
			</div>
			<div
				class="w-full h-full flex items-center justify-center relative p-1 rounded-md bg-gradient-to-t from-[#03B381] to-[#3B4755]"
				id="item-5"
			>
				<div
					class="card-image2 flex justify-center relative items-center h-full rounded-md w-full bg-gray-800"
				>
					<img
						style="max-width: 30%;
						aspect-ratio: 1 / 1;"
						id="image3"
						class="object-contain py-5 transition-opacity duration-500"
						src={Bitx}
						alt=""
					/>
					<img
						style="max-width: 100%;
						aspect-ratio: 1 / 1;"
						id="image4"
						class="hover-image w-full h-full object-cover opacity-0 absolute top-0 left-0 transition-opacity duration-500"
						src={BitxBg}
						alt=""
					/>
				</div>
			</div>
		</div>
	</article>
</section>

<script>
	const cardImage = document.querySelector('.card-image');
	const image1 = document.getElementById('image1');
	const image2 = document.getElementById('image2');

	cardImage.addEventListener('mouseenter', () => {
		image1.style.opacity = '0';
		image2.style.opacity = '1';
	});

	cardImage.addEventListener('mouseleave', () => {
		image1.style.opacity = '1';
		image2.style.opacity = '0';
	});
</script>

<script>
	const cardImage2 = document.querySelector('.card-image2');
	const image3 = document.getElementById('image3');
	const image4 = document.getElementById('image4');

	cardImage2.addEventListener('mouseenter', () => {
		image3.style.opacity = '0';
		image4.style.opacity = '1';
	});

	cardImage2.addEventListener('mouseleave', () => {
		image3.style.opacity = '1';
		image4.style.opacity = '0';
	});
</script>

