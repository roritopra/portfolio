---
import Layout from '../layouts/Layout.astro'
import MenuLanding from '../components/MenuLanding.astro'
import HeaderLanding from '../components/HeaderLanding.astro'
import Profile from '../components/Profile.astro'
import ProjectsGrids from '../components/ProjectsGrids.astro';
---

<Layout title="Rodro | UX/Front Dev">
	<MenuLanding />
	<main
		class="bg-[#0C1014] snap-y snap-mandatory relative w-full h-screen overflow-y-auto overflow-x-hidden scroll-smooth"
	>
		<div
			style="position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: url('/bg_logo.webp');
		background-size: 20%;
		background-repeat: no-repeat;
		background-position: center;
		z-index: 1;"
		>
		</div>
		<div class="">
			<HeaderLanding />
		</div>
		<div class="">
			<Profile />
		</div>
		<div class="">
			<ProjectsGrids />
		</div>
	</main>
</Layout>
